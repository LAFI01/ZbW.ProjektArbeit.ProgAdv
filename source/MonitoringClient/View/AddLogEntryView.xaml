<Window
  x:Class="MonitoringClient.View.AddLogEntryView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:MonitoringClient.View"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  Title="Create new Log Entry"
  Width="300"
  Height="450"
  Background="#FF6BB4FD"
  mc:Ignorable="d">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="0.05*" />
      <ColumnDefinition Width="1*" />
      <ColumnDefinition Width="1*" />
      <ColumnDefinition Width="0.05*" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="0.05*" />
      <RowDefinition Height="0.2*" />
      <RowDefinition Height="0.2*" />
      <RowDefinition Height="0.2*" />
      <RowDefinition Height="0.2*" />
      <RowDefinition Height="0.2*" />
      <RowDefinition Height="0.05*" />
    </Grid.RowDefinitions>
    <Label
      Grid.Row="1"
      Grid.Column="1"
      VerticalAlignment="center"
      FontWeight="Bold">
      Device Id:
    </Label>
    <ComboBox
      Name="deviceCombo"
      Grid.Row="1"
      Grid.Column="2"
      Width="auto"
      VerticalAlignment="center"
      ItemsSource="{Binding Path=DeviceIds}"
      SelectedItem="{Binding Path=SelectedDeviceId}" />
    <Label
      Grid.Row="2"
      Grid.Column="1"
      VerticalAlignment="center"
      FontWeight="Bold">
      Hostname:
    </Label>
    <ComboBox
      Grid.Row="2"
      Grid.Column="2"
      Width="auto"
      VerticalAlignment="center"
      ItemsSource="{Binding Path=HostnameItems}"
      SelectedItem="{Binding Path=SelectedHostnameItem}" />
    <Label
      Grid.Row="3"
      Grid.Column="1"
      VerticalAlignment="center"
      FontWeight="Bold">
      Severity:
    </Label>
    <ComboBox
      Grid.Row="3"
      Grid.Column="2"
      Width="auto"
      VerticalAlignment="Center"
      ItemsSource="{Binding Path=SeverityItems}"
      SelectedItem="{Binding Path=SelectedSeverityItem}" />
    <Label
      Grid.Row="4"
      Grid.Column="1"
      VerticalAlignment="center"
      FontWeight="Bold">
      Message:
    </Label>
    <TextBox
      Grid.Row="4"
      Grid.Column="2"
      Width="auto"
      Height="20"
      VerticalAlignment="center"
      Text="{Binding Path=Message, Mode=TwoWay}" />
    <Button
      Name="cancelBtn"
      Grid.Row="5"
      Grid.Column="1"
      Width="100"
      Padding="5,5,5,5"
      HorizontalAlignment="Center"
      VerticalAlignment="Center"
      Background="#FFFFFBFB"
      BorderThickness="0"
      Command="{Binding Path=CancelCommand}"
      FontSize="12"
      TabIndex="0"
      ToolTip="Cancel">
      Cancel
    </Button>
    <Button
      Name="saveBtn"
      Grid.Row="5"
      Grid.Column="2"
      Width="100"
      Padding="5,5,5,5"
      HorizontalAlignment="Center"
      VerticalAlignment="Center"
      Background="#FFFFFBFB"
      BorderThickness="0"
      Command="{Binding Path=SaveCommand}"
      FontSize="12"
      TabIndex="0"
      ToolTip="Save">
      Save
    </Button>
  </Grid>
</Window>