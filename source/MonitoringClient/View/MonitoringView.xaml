<Window
  x:Class="MonitoringClient.View.MonitoringView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:MonitoringClient"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  Title="MonitoringView"
  Width="800"
  Height="450"
  Background="#FF6BB4FD"
  Foreground="#FF2FB3D1"
  mc:Ignorable="d">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="0.05*" />
      <ColumnDefinition Width="1*" />
      <ColumnDefinition Width="0.05*" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="0.05*" />
      <RowDefinition Height="0.1*" />
      <RowDefinition Height="0.5*" />
      <RowDefinition Height="0.05*" />
    </Grid.RowDefinitions>

    <StackPanel
      Grid.Row="1"
      Grid.Column="1"
      Orientation="Horizontal">
      <Button
        Name="loadBtn"
        Width="100"
        Margin="0,0,15,0"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Background="#FFFFFBFB"
        BorderThickness="0"
        Command="{Binding Path=LoadCommand}"
        FontSize="12"
        TabIndex="0"
        ToolTip="Load all Log Entries">
        <StackPanel Orientation="Horizontal">
          <Image
            Width="15"
            Height="15"
            Margin="5,5,5,5"
            HorizontalAlignment="Center"
            Opacity="0.5"
            Source="../Icons/load.png"
            Stretch="Fill"
            UseLayoutRounding="False" />
          <TextBlock Margin="5,5,5,5">Load</TextBlock>
        </StackPanel>
      </Button>
      <Button
        Name="confirmBtn"
        Width="100"
        Margin="0,0,15,0"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Background="#FFFFFBFB"
        BorderThickness="0"
        Command="{Binding Path=ConfirmCommand}"
        FontSize="12"
        TabIndex="1"
        ToolTip="Quit a Log Entry">
        <StackPanel Orientation="Horizontal">
          <Image
            Width="15"
            Height="15"
            Margin="5,5,5,5"
            HorizontalAlignment="Center"
            Opacity="0.5"
            Source="../Icons/confirm.PNG"
            Stretch="Fill" />
          <TextBlock Margin="5,5,5,5">
            Confirm
          </TextBlock>
        </StackPanel>
      </Button>
      <Button
        Name="addBtn"
        Width="100"
        Margin="0,0,15,0"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Background="#FFFFFBFB"
        BorderThickness="0"
        Command="{Binding Path=AddCommand}"
        FontSize="12"
        TabIndex="2"
        ToolTip="Add new Log Entry">
        <StackPanel Orientation="Horizontal">
          <Image
            Width="15"
            Height="15"
            Margin="5,5,5,5"
            HorizontalAlignment="Center"
            Opacity="0.5"
            Source="../Icons/add.png"
            Stretch="Fill"
            UseLayoutRounding="False" />
          <TextBlock Margin="5,5,5,5">
            Add
          </TextBlock>
        </StackPanel>
      </Button>
    </StackPanel>
    <ListView
      Name="LogEntriesGrid"
      Grid.Row="2"
      Grid.Column="1"
      HorizontalContentAlignment="Stretch"
      IsSynchronizedWithCurrentItem="True"
      ItemsSource="{Binding LogEntries}"
      SelectedIndex="0"
      SelectedItem="{Binding SelectedLogEntry, Mode=TwoWay}">
      <ListView.View>
        <GridView x:Name="logEntryGrid">
          <GridViewColumn
            Width="50"
            DisplayMemberBinding="{Binding Id}"
            Header="Id" />
          <GridViewColumn
            Width="150"
            DisplayMemberBinding="{Binding Hostname}"
            Header="Hostname" />
          <GridViewColumn
            Width="150"
            DisplayMemberBinding="{Binding Pod}"
            Header="Pod" />
          <GridViewColumn
            Width="150"
            DisplayMemberBinding="{Binding Location}"
            Header="Location" />
          <GridViewColumn
            Width="50"
            DisplayMemberBinding="{Binding Severity}"
            Header="Severity" />
          <GridViewColumn
            Width="150"
            DisplayMemberBinding="{Binding Message}"
            Header="Message" />
        </GridView>
      </ListView.View>
    </ListView>
  </Grid>
</Window>
